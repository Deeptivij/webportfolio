<%= form_for(@lyric) do |f| %>
    <div class="col-md-6">
        <%= f.label :title %><br />
        <%= f.text_field :title, class: 'form-control', required: true %>
        <%= f.label :description %><br />
        <%= f.text_field :description, class: 'form-control', required: true %>
          <%= f.label :text%><br />
          <%= f.text_area :text, :class => 'ckeditor', required: true %>
          <%= f.select :read_type, options_for_select([["Select One", ""], "poem", "couplet"]), :required => 'true' %>
        <span class="help-block">A link to the poem  on YouTube channel.</span>
    </div>
    <div class="row">
        <%= f.submit %>
    </div>
  <% end %>
<script>
$('.ckeditor').ckeditor({
  // optional config
});
</script>
