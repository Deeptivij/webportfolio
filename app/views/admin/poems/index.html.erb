<div class="wrapper">
<% if @poems.any? %>
  <div class="containss">
    <div class="col-md-2 col-xs-2 col-sm-2 col-lg-2 hiddenbuttons">
    </div>
    <div class="col-md-10 col-xs-10 col-sm-10 col-lg-10 playlistt">
<% @poems.in_groups_of(3) do |group| %>
              <% group.each do |video| %>
                <% if video %>
                  <div>
              <div class="yt_video thumbnails col-md-3 col-xs-3 col-sm-3 col-lg-3 picturess">
                <%= link_to image_tag("https://img.youtube.com/vi/#{video.uid}/mqdefault.jpg", alt: video.title,
                                class: 'img-rounded poemimg'),
                      "https://www.youtube.com/watch?v=#{video.uid}", target: '_blank' %>
               <div class="caption">
                  <p class="captions">Composer: <b><%= video.title%></b></p>
                      <p class="captions">Lyrics: <b>Kajendra Sj&auml;l Srivastva</b></p>
                </div>
              </div>
                <% end %>
            </div>
        <% end %>
    <% end %>
  </div>
  </div>
<% end %>
</div>
