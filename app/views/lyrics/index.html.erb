
<% if @lyrics.any?||@lyrics1.any? %>

<div class="col-md-2 col-lg-2"></div>
    <div class="lyrics-container-wrapper col-md-8 col-xs-12 col-sm-12 col-lg-8 ">
<div class="row">
<div class="col-md-12">
<%= bootstrap_form_tag url:lyrics_path, method: :get, remote: true,html: {class: 'read-search'} do |f| %>
                 <input type = "radio" id = "sort_ri" name = "sort" 
                 value = "poem" checked = "checked" class="sort"/>
                <%= f.label :sort_by, "Poems",class:'filter' %> 
                <input type = "radio" id = "sort_ra" name = "sort" 
                 value = "couplet" class="sort"/>
                <%= f.label :sort_by, "Couplets",class:'filter'%></span>
                <%end%>
</div>
</div>
<div class="read_poem">
<% @lyrics.in_groups_of(2) do |group| %>
              <% group.each do |lyric| %>
              
                <% if lyric %>
                  <%= link_to(lyric_path(lyric),target: '_blank') do %>
                <div class="row activity-table">
              <div class="lyrics-title col-md-6 col-xs-6 col-sm-6 col-lg-6">
                <span class="captions"><%=lyric.title%></span>
                   </div>  
<div class="lyrics-description col-md-6 col-xs-6 col-sm-6 col-lg-6">
                <span class="captions"><%=lyric.description%></span>
                   </div>
</div>
                <% end %>
                <%end%>
       
        <% end %>
    <% end %>
    <%= will_paginate @lyrics %>
  </div>
<% end %>
<div class="read_couplet hide">
<% @lyrics1.in_groups_of(2) do |group| %>
              <% group.each do |lyric| %>
              
                <% if lyric %>
                <%= link_to(lyric_path(lyric),target: '_blank') do %>

                <div class="row activity-table">
              <div class="lyrics-title col-md-6 col-xs-6 col-sm-6 col-lg-6">
                <span class="captions"><%=lyric.title%></span>
                   </div>  
<div class="lyrics-description col-md-6 col-xs-6 col-sm-6 col-lg-6">
                <span class="captions"><%=lyric.description%></span>
                   </div>
</div>
                <% end %>
 <%end%>
        <% end %>
    <% end %>
     <%= will_paginate @lyrics1 %>
  </div>
</div>
</div>
